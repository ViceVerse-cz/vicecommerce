{
  "name": "vicecommerce",
  "packageManager": "pnpm@2.26.3",
  "private": true,
  "scripts": {
    "dev": "dotenv -- turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "lint": "rome check --apply",
    "format": "rome format --write \"**/*.{ts,tsx,md}\"",
    "seed": "dotenv -- turbo run seed",
    "seed:contentful": "dotenv -- turbo run seed:contentful",
    "migrate:contentful": "dotenv -- turbo run migrate:contentful",
    "migrate": "dotenv -- turbo run migrate",
    "prepare": "husky install",
    "docker:build": "cross-env COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose -f docker-compose.yml build --parallel",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:artillery": "pnpm artillery run ./e2e/artillery-vite.yml"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "dotenv-cli": "^7.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "postcss": "^8.4.21",
    "rome": "^11.0.0",
    "turbo": "^1.8.1"
  }
}