{
  "name": "vicecommerce",
  "packageManager": "pnpm@2.26.3",
  "private": true,
  "scripts": {
    "dev": "dotenv -- turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "lint": "turbo run lint -- --fix --cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --cache",
    "seed": "dotenv -- turbo run seed",
    "prepare": "husky install",
    "docker:build": "cross-env COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose -f docker-compose.yml build --parallel",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:artillery": "pnpm artillery run ./e2e/artillery-vite.yml"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-viceverse": "*",
    "eslint-plugin-turbo": "^0.0.7",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "turbo": "latest"
  }
}
